<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMobileApp.SampleViewPage" Title="Sample View">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image Source="xamarinmonkey.png" WidthRequest="120" />
                <Slider x:Name="sliderSample" Minimum="0" Maximum="100" />
                <Label Text="Usia :" />
                <Entry x:Name="entryUsia" />
                <Stepper x:Name="stepperUsia" Minimum="0" Maximum="100" Increment="1" />
                <Label Text="Apakah anda setuju dengan term and condition yg disediakan?" />
                <Switch x:Name="switchTerm" IsToggled="False" HorizontalOptions="Start" />
                <Label Text="Tanggal :" />
                <DatePicker x:Name="dpTanggal" Format="D" />
                <Picker x:Name="pickerJurusan" Title="Pilih Jurusan" />
                <StackLayout Orientation="Horizontal">
                    <Button x:Name="btnGet" Text="Get Value" />
                    <Button x:Name="btnPilih" Text="Pilih Jurusan" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>