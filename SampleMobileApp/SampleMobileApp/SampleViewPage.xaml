<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMobileApp.SampleViewPage" Title="Sample View">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="xamarinmonkey.png" WidthRequest="120" />
            <Slider x:Name="sliderSample" Minimum="0" Maximum="100" />
            <Label Text="Usia :" />
            <Entry x:Name="entryUsia" />
            <Stepper x:Name="stepperUsia" Minimum="0" Maximum="100" Increment="1" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnGet" Text="Get Value" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>