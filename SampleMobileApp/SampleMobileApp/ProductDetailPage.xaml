<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMobileApp.ProductDetailPage" Title="Detail Tempat">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Gambar}" WidthRequest="200" />
            <Label Text="{Binding NamaProduct}" FontSize="Large" FontAttributes="Bold" />
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding Deskripsi}" FontSize="Medium" />
                <Label Text="{Binding Harga,StringFormat='Harga:Rp.{0:N0}'}" 
                       FontSize="Medium" FontAttributes="Bold" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>